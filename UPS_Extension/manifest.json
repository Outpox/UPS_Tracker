{
	"manifest_version": 2,

	"name": "UPS Shipping tracker",
	"description": "This extension will track your UPS package and notify you when anything happens.",
	"version": "1.0",
	"background": {
		"page": "background.html"
	},
	"options_ui": {
    	"page": "options.html",
    	"chrome_style": true
  },
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
		},
	"permissions": [
		"storage",
		"notifications"
	]
}